<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1> Add a new AI Tool </h1>

<p> Please enter following details to add a new AI tool</p>

<%= form_with model: @ai_tool, html: { class: 'form' } do |form| %>
  <div class="form-group mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', style: 'width : 250px;' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description %>
    <%= form.text_field :description, class: 'form-control',style: 'width : 250px;' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :link %>
    <%= form.text_field :link, class: 'form-control',style: 'width : 250px;' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :category %>
    <%= form.select :category_id, @categories, { include_blank: 'Select Category', selected: '' }, class: 'form-select', style: 'width: 250px;' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price %>
    <%= form.select :price_id, @prices, { include_blank: 'Select Price', selected: '' }, class: 'form-select', style: 'width : 250px;' %>
  </div>

  <%= form.submit "Create", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', root_path, class: 'btn btn-secondary' %>
  </form>
      <% end%>
    </div>
  </div>
</div>
