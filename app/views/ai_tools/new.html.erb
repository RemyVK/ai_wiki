<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-green" style="font-family: 'Montserrat', sans-serif; font-weight: 700; font-size: 56px; padding-top: 20px">Add a new AI Tool</h1>

      <p class="text-black" style="font-family: 'Montserrat', sans-serif; font-weight: 400; font-size: 20px; padding-top: 20px;">
        Enter the details to add a new AI tool</p>

      <%= form_with model: @ai_tool, html: { class: 'form' } do |form| %>
        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control', style: 'width : 250px;' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control', style: 'width : 250px;' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :link %>
          <%= form.text_field :link, class: 'form-control', style: 'width : 250px;' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :category %>
          <%= form.select :category_id, @categories, { include_blank: 'Select Category', selected: '' }, class: 'form-select', style: 'width: 250px;' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :price %>
          <%= form.select :price_id, @prices, { include_blank: 'Select Price', selected: '' }, class: 'form-select', style: 'width: 400px;' %>
        </div>

        <%= form.submit "Create", class: 'btn btn-primary',style: "margin-bottom: 20px"%>
        <%= link_to 'Cancel', root_path, class: 'btn btn-secondary',style: "margin-bottom: 20px" %>
        </form>
      <% end %>
    </div>
  </div>
</div>
